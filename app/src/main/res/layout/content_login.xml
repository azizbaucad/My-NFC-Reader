<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backc"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.coudapp.LoginActivity"
    tools:showIn="@layout/activity_login">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:background="@android:color/transparent"
        android:contentDescription=""
        android:layout_marginRight="180dp"

        android:src="@drawable/ic_coud"
        tools:ignore="ContentDescription,RtlHardcoded" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1sp"
        android:layout_weight="0.01"
        tools:text="" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingLeft="24dp"
            android:paddingRight="24dp">
            <!-- Address Label -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="16dp"
                android:paddingLeft="13dp"
                android:text="CONNECTEZ-VOUS"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold"
                 />
            <EditText android:id="@+id/emailOubTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_person_pin_black_24dp"
                    android:maxLength="9"
                    android:drawablePadding="7dp"

                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="0dp"
                    android:inputType="number"
                    android:hint="Numero du Restaurant" />
            <!-- Address Label -->

                <EditText
                    android:id="@+id/passworOubTxt"
                    android:drawableStart="@drawable/ic_lock_black_24dp"
                    android:drawablePadding="7dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="0dp"
                    android:inputType="numberPassword"
                    android:hint="Votre PIN" />


            <Button
                android:id="@+id/loginOublBtn"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
                android:drawablePadding="2dip"
                android:gravity="center"
                android:elevation="2dp"
                android:translationZ="10dp"
                android:stateListAnimator="@null"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="110dp"
                android:background="@drawable/rounded_button"
                android:textColor="@color/colorewihite"
                android:text="@string/bt_connextion"
                />
        </LinearLayout>
    <TextView
        android:id="@+id/textInf"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3" />

</LinearLayout>
