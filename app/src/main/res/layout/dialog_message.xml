<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorMessag"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/app_name" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/messageImage"
            android:contentDescription="Desc"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_check_64dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/messageTitle"
            android:layout_toRightOf="@id/messageImage"
            android:layout_toEndOf="@id/messageImage"
            android:layout_alignParentTop="true"
            android:textSize="25sp"
            android:text="Title"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/messageContent"
            android:layout_toRightOf="@id/messageImage"
            android:layout_toEndOf="@id/messageImage"
            android:layout_below="@id/messageTitle"
            android:text="msgContent"/>

    </RelativeLayout>
</LinearLayout>